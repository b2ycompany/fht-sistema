rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Pasta temporária para uploads de cadastro. (ESTA REGRA ESTÁ CORRETA)
    match /tmp_uploads/{uploadId}/{allPaths=**} {
      allow write: if request.auth != null;
      allow read: if request.auth != null;
    }

    // Documentos de Médicos.
    match /doctor_documents/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == 'admin');
    }

    // Documentos de Hospitais.
    match /hospital_documents/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == 'admin');
    }
  }
}