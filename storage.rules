rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // 1. Pasta temporária para uploads de cadastro.
    // Permite que qualquer usuário autenticado escreva, mas ninguém leia.
    match /tmp_uploads/{uploadId}/{allPaths=**} {
      allow write: if request.auth != null;
      allow read: if false;
    }

    // 2. Documentos de Médicos (incluindo subpastas como 'specialist').
    // Apenas o dono do perfil (ou um admin) pode ler/escrever.
    match /doctor_documents/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == 'admin');
    }

    // 3. Documentos de Hospitais (incluindo subpastas como 'legal_rep').
    // Apenas o dono do perfil (ou um admin) pode ler/escrever.
    match /hospital_documents/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == 'admin');
    }
  }
}