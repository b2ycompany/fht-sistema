{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib", // Onde o JavaScript compilado ser√° salvo
    "sourceMap": true,
    "strict": true,
    "target": "es2017", // Node.js 18 (usado pelo Firebase Functions) suporta ES2017+
    "esModuleInterop": true,
    "skipLibCheck": true, // Para ignorar erros de tipo em node_modules
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave": true,
  "include": [
    "src" // Compila apenas os arquivos na pasta src
  ],
  "exclude": ["node_modules", "lib"] // Exclui node_modules e a pasta de output lib
}